<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        android:backgroundTint="#FFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvFilterTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Предпочтения по питанию"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:layout_marginBottom="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Белковое 🥩"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#222" />
                    <Switch
                        android:id="@+id/switchProtein"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@drawable/switch_thumb_selector"
                        android:trackTint="@drawable/switch_track_selector"
                        android:scaleX="1.15"
                        android:scaleY="1.15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Быстрое ⚡"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#222" />
                    <Switch
                        android:id="@+id/switchFast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@drawable/switch_thumb_selector"
                        android:trackTint="@drawable/switch_track_selector"
                        android:scaleX="1.15"
                        android:scaleY="1.15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Веган 🌱"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#222" />
                    <Switch
                        android:id="@+id/switchVegan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@drawable/switch_thumb_selector"
                        android:trackTint="@drawable/switch_track_selector"
                        android:scaleX="1.15"
                        android:scaleY="1.15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Вегетерианец 🥗"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#222" />
                    <Switch
                        android:id="@+id/switchVegetarian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@drawable/switch_thumb_selector"
                        android:trackTint="@drawable/switch_track_selector"
                        android:scaleX="1.15"
                        android:scaleY="1.15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Морское 🐟"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#222" />
                    <Switch
                        android:id="@+id/switchSea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@drawable/switch_thumb_selector"
                        android:trackTint="@drawable/switch_track_selector"
                        android:scaleX="1.15"
                        android:scaleY="1.15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="0dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Лёгкое ☁️"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#222" />
                    <Switch
                        android:id="@+id/switchLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@drawable/switch_thumb_selector"
                        android:trackTint="@drawable/switch_track_selector"
                        android:scaleX="1.15"
                        android:scaleY="1.15" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout> 