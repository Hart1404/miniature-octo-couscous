<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Горизонтальный блок: название + кнопка -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/productCardName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Название продукта"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/cardDetailsButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Добавить"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:background="@drawable/rounded_button_green"
                android:textColor="@color/white"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/productCardCalories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Калории: 0"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/productCardProtein"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Белки: 0.0г"
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/productCardFat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Жиры: 0.0г"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/productCardCarbs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Углеводы: 0.0г"
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="12dp" />

        <TextView
            android:id="@+id/productCardTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Теги: ..."
            android:textSize="15sp"
            android:textColor="#388E3C"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/productCardAllergens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Аллергены: ..."
            android:textSize="15sp"
            android:textColor="#D32F2F" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 