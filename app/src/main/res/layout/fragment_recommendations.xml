<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4E4">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FFF">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:text="Меню дня"
                            android:textColor="#222"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/filterButton"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginEnd="8dp"
                            android:text="Фильтр"
                            android:textColor="#757575"
                            android:textSize="14sp"
                            android:background="@drawable/ripple_rounded_gray_button"
                            android:drawableEnd="@drawable/ic_filter"
                            android:drawablePadding="4dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:gravity="center"
                            android:stateListAnimator="@null" />

                        <ImageButton
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/ripple_circle_green"
                            android:contentDescription="Обновить"
                            android:src="@drawable/ic_refresh" />
                    </LinearLayout>

                    <!-- Завтрак -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        android:layout_marginBottom="12dp"
                        android:backgroundTint="#F8F9FA">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/zavtrak" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingStart="12dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Овсянка с фруктами"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#222" />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="4dp">
                                    <TextView android:text="К: 320 " android:textColor="#F39C12" android:textStyle="bold" 
                                        android:layout_width="wrap_content" android:layout_height="wrap_content" />
                                    <TextView android:text="Б: 8 " android:textColor="#27AE60" android:layout_marginStart="8dp" android:textStyle="bold" 
                                        android:layout_width="wrap_content" android:layout_height="wrap_content" />
                                    <TextView android:text="Ж: 6 " android:textColor="#3498DB" android:layout_marginStart="8dp" android:textStyle="bold" 
                                        android:layout_width="wrap_content" android:layout_height="wrap_content" />
                                    <TextView android:text="У: 55" android:textColor="#E74C3C" android:layout_marginStart="8dp" android:textStyle="bold" 
                                        android:layout_width="wrap_content" android:layout_height="wrap_content" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Обед -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        android:layout_marginBottom="12dp"
                        android:backgroundTint="#F8F9FA">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/obed" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingStart="12dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Суп-пюре с гренками"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#222" />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="4dp">
                                    <TextView android:text="К: 410 " android:textColor="#F39C12" android:textStyle="bold" 
                                        android:layout_width="wrap_content" android:layout_height="wrap_content" />
                                    <TextView android:text="Б: 12 " android:textColor="#27AE60" android:layout_marginStart="8dp" android:textStyle="bold" 
                                        android:layout_width="wrap_content" android:layout_height="wrap_content" />
                                    <TextView android:text="Ж: 14 " android:textColor="#3498DB" android:layout_marginStart="8dp" android:textStyle="bold" 
                                        android:layout_width="wrap_content" android:layout_height="wrap_content" />
                                    <TextView android:text="У: 60" android:textColor="#E74C3C" android:layout_marginStart="8dp" android:textStyle="bold" 
                                        android:layout_width="wrap_content" android:layout_height="wrap_content" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Ужин -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        android:layout_marginBottom="12dp"
                        android:backgroundTint="#F8F9FA">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ygin" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingStart="12dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Стейк с овощами"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#222" />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="4dp">
                                    <TextView android:text="К: 520 " android:textColor="#F39C12" android:textStyle="bold" 
                                        android:layout_width="wrap_content" android:layout_height="wrap_content" />
                                    <TextView android:text="Б: 32 " android:textColor="#27AE60" android:layout_marginStart="8dp" android:textStyle="bold" 
                                        android:layout_width="wrap_content" android:layout_height="wrap_content" />
                                    <TextView android:text="Ж: 22 " android:textColor="#3498DB" android:layout_marginStart="8dp" android:textStyle="bold" 
                                        android:layout_width="wrap_content" android:layout_height="wrap_content" />
                                    <TextView android:text="У: 35" android:textColor="#E74C3C" android:layout_marginStart="8dp" android:textStyle="bold" 
                                        android:layout_width="wrap_content" android:layout_height="wrap_content" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Перекус -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        android:layout_marginBottom="12dp"
                        android:backgroundTint="#F8F9FA">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/perekus" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingStart="12dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Фруктовый перекус"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#222" />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="4dp">
                                    <TextView android:text="К: 180 " android:textColor="#F39C12" android:textStyle="bold" 
                                        android:layout_width="wrap_content" android:layout_height="wrap_content" />
                                    <TextView android:text="Б: 3 " android:textColor="#27AE60" android:layout_marginStart="8dp" android:textStyle="bold" 
                                        android:layout_width="wrap_content" android:layout_height="wrap_content" />
                                    <TextView android:text="Ж: 2 " android:textColor="#3498DB" android:layout_marginStart="8dp" android:textStyle="bold" 
                                        android:layout_width="wrap_content" android:layout_height="wrap_content" />
                                    <TextView android:text="У: 38" android:textColor="#E74C3C" android:layout_marginStart="8dp" android:textStyle="bold" 
                                        android:layout_width="wrap_content" android:layout_height="wrap_content" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Заполнитель для нижней панели -->
            <View
                android:layout_width="match_parent"
                android:layout_height="56dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout> 