<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4E4"
    tools:context=".MainActivity">

    <!-- Верхняя панель -->
    <androidx.cardview.widget.CardView
        android:id="@+id/appBar"
        android:layout_width="0dp"
        android:layout_height="72dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#A3D645"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#A3D645">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="НАЗВАНИЕ"
                android:textColor="#222"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/settingsButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_green_circle"
                android:src="@android:drawable/ic_menu_manage"
                android:contentDescription="Настройки"
                android:scaleType="center"
                android:padding="0dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_circle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="16dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Основной контент -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="56dp">

            <!-- Карточка дня -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Заголовок -->
                    <TextView
                        android:id="@+id/dateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Сегодня, 22 дек"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp" />

                    <!-- Круглый блок с калориями -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        app:cardCornerRadius="80dp"
                        app:cardElevation="2dp"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="#FFF">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/kcalLeft"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2560"
                                android:textColor="#222"
                                android:textSize="36sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ккал осталось"
                                android:textColor="#888"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Eaten/Burned -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="12dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/eatenKcal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#A3D645"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Съедено"
                                android:textColor="#888"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/burnedKcal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#FF7F50"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Сожжено"
                                android:textColor="#888"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Макроэлементы -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="12dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <androidx.cardview.widget.CardView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                app:cardCornerRadius="32dp"
                                app:cardElevation="2dp"
                                android:backgroundTint="#FFF">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                    <TextView
                                        android:id="@+id/carbs"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="#E74C3C"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif-medium" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="/ 224 г"
                                        android:textColor="#888"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Углеводы"
                                android:textColor="#888"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <androidx.cardview.widget.CardView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                app:cardCornerRadius="32dp"
                                app:cardElevation="2dp"
                                android:backgroundTint="#FFF">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                    <TextView
                                        android:id="@+id/protein"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="#F39C12"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif-medium" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="/ 128 г"
                                        android:textColor="#888"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Белки"
                                android:textColor="#888"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <androidx.cardview.widget.CardView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                app:cardCornerRadius="32dp"
                                app:cardElevation="2dp"
                                android:backgroundTint="#FFF">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                    <TextView
                                        android:id="@+id/fat"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="#3498DB"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif-medium" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="/ 128 г"
                                        android:textColor="#888"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Жиры"
                                android:textColor="#888"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Блок активности -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_directions"
                        android:layout_marginEnd="8dp" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/walking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#222"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ходьба"
                            android:textColor="#888"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#222"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Активность"
                            android:textColor="#888"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fabSize="mini"
                        app:maxImageSize="24dp"
                        android:src="@drawable/ic_add"
                        android:contentDescription="Add activity"
                        app:backgroundTint="#A3D645"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Приёмы пищи -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FFF">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <!-- Завтрак -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:padding="8dp">
                        <ImageView
                            android:id="@+id/breakfastIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_gallery"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                        <LinearLayout
                            android:id="@+id/breakfastTextBlock"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp"
                            app:layout_constraintStart_toEndOf="@id/breakfastIcon"
                            app:layout_constraintEnd_toStartOf="@id/breakfastAdd"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Завтрак"
                                android:textColor="#222"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />
                            <TextView
                                android:id="@+id/breakfastKcal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 / 768 ккал"
                                android:textColor="#888"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/breakfastAdd"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_green_circle"
                            android:src="@drawable/ic_add"
                            android:contentDescription="Add food"
                            android:scaleType="center"
                            android:padding="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="@drawable/ripple_circle"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginEnd="16dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!-- Обед -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:padding="8dp">
                        <ImageView
                            android:id="@+id/lunchIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_gallery"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                        <LinearLayout
                            android:id="@+id/lunchTextBlock"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp"
                            app:layout_constraintStart_toEndOf="@id/lunchIcon"
                            app:layout_constraintEnd_toStartOf="@id/lunchAdd"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Обед"
                                android:textColor="#222"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />
                            <TextView
                                android:id="@+id/lunchKcal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 / 768 ккал"
                                android:textColor="#888"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/lunchAdd"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_green_circle"
                            android:src="@drawable/ic_add"
                            android:contentDescription="Add food"
                            android:scaleType="center"
                            android:padding="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="@drawable/ripple_circle"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginEnd="16dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!-- Ужин -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:padding="8dp">
                        <ImageView
                            android:id="@+id/dinnerIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_gallery"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                        <LinearLayout
                            android:id="@+id/dinnerTextBlock"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp"
                            app:layout_constraintStart_toEndOf="@id/dinnerIcon"
                            app:layout_constraintEnd_toStartOf="@id/dinnerAdd"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ужин"
                                android:textColor="#222"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />
                            <TextView
                                android:id="@+id/dinnerKcal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 / 768 ккал"
                                android:textColor="#888"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/dinnerAdd"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_green_circle"
                            android:src="@drawable/ic_add"
                            android:contentDescription="Add food"
                            android:scaleType="center"
                            android:padding="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="@drawable/ripple_circle"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginEnd="16dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!-- Перекусы -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:padding="8dp">
                        <ImageView
                            android:id="@+id/snacksIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_gallery"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                        <LinearLayout
                            android:id="@+id/snacksTextBlock"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp"
                            app:layout_constraintStart_toEndOf="@id/snacksIcon"
                            app:layout_constraintEnd_toStartOf="@id/snacksAdd"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Перекус"
                                android:textColor="#222"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />
                            <TextView
                                android:id="@+id/snacksKcal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 / 256 ккал"
                                android:textColor="#888"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/snacksAdd"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_green_circle"
                            android:src="@drawable/ic_add"
                            android:contentDescription="Add food"
                            android:scaleType="center"
                            android:padding="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="@drawable/ripple_circle"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginEnd="16dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Заполнитель для нижней панели -->
            <View
                android:layout_width="match_parent"
                android:layout_height="56dp" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#FFF" />

</androidx.constraintlayout.widget.ConstraintLayout>